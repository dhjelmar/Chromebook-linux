alias lsl="ls -alF"
alias lsd="ls -d */"
alias pd="pushd"
alias pp="popd"
alias ff="find . -print | grep -i"
# linux version, lv
alias lv="lsb_release -a"
alias rmold="rm *~"
# change to last modified folder
cdl () {
    local lastfolderv=`ls -dltr */ | tail -n 1`
    local lastfolder=`echo ${lastfolderv##* }`
    cd $lastfolder
}


