[user]
	name = dlhjel
	email = dlhjel@gmail.com
[color]
	ui = auto
[color "status"]
       added   = "green black bold"
       changed = "yellow black bold"
       untracked = "black white"
       unmerged = "yellow black bold"
[core]
	editor = emacs
[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
[merge]
    tool = meld
[mergetool "meld"]
    # run with `git mergetool`
    # Choose one of these two lines (not both!) explained below.
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
    #cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"
